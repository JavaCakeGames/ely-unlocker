{
  "manifest_version": 3,
  "name": "Ely Unlocker",
  "version": "2.1",
  "description": "Bypass daily codes nag on ely.gg.",
  "icons": {
    "16": "ico/16.png",
    "32": "ico/32.png",
    "48": "ico/48.png",
    "128": "ico/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://ely.gg/*", "https://www.ely.gg/*"],
      "js": ["content.js"],
      "world": "MAIN",
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ely-unlocker@javacakegames.com",
      "strict_min_version": "128.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    },
    "gecko_android": {
      "strict_min_version": "128.0"
    }
  }
}